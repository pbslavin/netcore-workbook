@model BaseProject.Areas.Admin.Models.ViewRoleViewModel

@{
    ViewData["Title"] = "Delete Role";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Role.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssignedUsers)
        </dt>
        <dd>
            @string.Join(", ", Model.AssignedUsers.Select(x => x.UserName))
        </dd>
    </dl>
    @if (this.ViewContext.ModelState.ErrorCount == 0)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Role.Id" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    }
</div>
