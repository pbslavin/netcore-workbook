@model Checkpoint1.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Appointment</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="ServiceProviderId" class="control-label">Service Provider</label>
                <select asp-for="ServiceProviderId" class="form-control">
                    @foreach (var serviceProvider in ViewData["ServiceProviders"] as List<ServiceProvider>)
                    {
                        <option value=@serviceProvider.ServiceProviderId>@serviceProvider.FullName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer</label>
                <select asp-for="CustomerId" class="form-control">
                    @foreach (var customer in ViewBag.Customers)
                    {
                        <option value=@customer.CustomerId>@customer.FullName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <select asp-for="Day" class="form-control">
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <select asp-for="Time" class="form-control">
                    <option value="0">9 AM</option>
                    <option value="1">10 AM</option>
                    <option value="2">11 AM</option>
                    <option value="3">Noon</option>
                    <option value="4">1 PM</option>
                    <option value="5">2 PM</option>
                    <option value="6">3 PM</option>
                    <option value="7">4 PM</option>
                    <option value="8">5 PM</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>