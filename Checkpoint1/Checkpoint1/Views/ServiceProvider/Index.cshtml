@model IEnumerable<Checkpoint1.Models.ServiceProvider>

@{
    ViewData["Title"] = "ServiceProviders";
}

<h2>Service Providers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Checkpoint1.Models.ServiceProvider s in Model) {
        <tr>
            <td>
                <h3>@Html.ActionLink(@s.FullName, "AppointmentSummary", new { ServiceProviderId = s.ServiceProviderId })</h3>
                <br />
                @Html.ActionLink("Delete", "Delete", new { ServiceProviderId = s.ServiceProviderId })
            </td>
        </tr>
}
    </tbody>
</table> 